{
    "$schema":"http://json-schema.org/draft-04/schema#",
    "type":"object",
    "properties":{
        "debug":{
            "type":"boolean"
        },
        "delay":{
            "type":"number"
        },
        "gutter_theme":{
            "type":"string"
        },
        "highlights.time_to_idle":{
            "type":"number"
        },
        "highlights.demote_while_editing":{
            "type":"string",
            "pattern":"^(none|ws_regions|warnings|all)$"
        },
        "kill_old_processes":{
            "type":"boolean"
        },
        "highlights.demote_scope": {
            "type":"string"
        },
        "lint_mode":{
            "type":"string",
            "pattern":"^(background|load_save|manual|save)$"
        },
        "linters":{
            "type":"object",
            "additionalProperties":{
                "type":"object",
                "properties":{
                    "styles":{
                        "type":"array",
                        "items":{
                            "type":"object",
                            "properties":{
                                "mark_style":{
                                    "type":"string",
                                    "pattern":"^(fill|outline|solid_underline|squiggly_underline|stippled_underline|none)$"
                                },
                                "priority":{
                                    "type":"integer",
                                    "minimum":0
                                },
                                "scope":{
                                    "type":"string"
                                },
                                "icon":{
                                    "type":"string"
                                },
                                "types":{
                                    "type":"array",
                                    "items":{
                                        "type":"string",
                                        "pattern":"^(error|warning)$"
                                    },
                                    "minItems":1,
                                    "uniqueItems":true
                                },
                                "codes":{
                                    "type":"array",
                                    "items":{
                                        "type":"string"
                                    },
                                    "minItems":1,
                                    "uniqueItems":true
                                }
                            },
                            "additionalProperties":false
                        }
                    }
                }
            }
        },
        "no_column_highlights_line":{
            "type":"boolean"
        },
        "paths":{
            "type":"object"
        },
        "show_hover_line_report":{
            "type":"boolean"
        },
        "show_hover_region_report":{
            "type":"boolean"
        },
        "show_marks_in_minimap":{
            "type":"boolean"
        },
        "show_panel_on_save":{
            "type":"string",
            "pattern":"^(never|view|window)$"
        },
        "syntax_map":{
            "type":"object"
        },
        "statusbar.counters_template":{
            "type":"string"
        },
        "statusbar.messages_template":{
            "type":"string"
        },
        "statusbar.show_active_linters":{
            "type":"boolean"
        },
        "styles":{
            "type":"array",
            "items":{
                "type":"object",
                "properties":{
                    "mark_style":{
                        "type":"string",
                        "pattern":"^(fill|outline|solid_underline|squiggly_underline|stippled_underline|none)$"
                    },
                    "priority":{
                        "type":"integer",
                        "minimum":0
                    },
                    "scope":{
                        "type":"string"
                    },
                    "icon":{
                        "type":"string"
                    },
                    "types":{
                        "type":"array",
                        "items":{
                            "type":"string",
                            "pattern":"^(error|warning)$"
                        },
                        "minItems":1,
                        "uniqueItems":true
                    }
                },
                "additionalProperties":false
            }
        }
    },
    "additionalProperties": false
}
